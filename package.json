{
  "name": "@danidoble/webserial",
  "description": "WebSerial API wrapper",
  "version": "4.0.4",
  "type": "module",
  "license": "MIT",
  "author": "danidoble",
  "repository": {
    "type": "git",
    "url": "https://github.com/danidoble/webserial.git"
  },
  "bugs": {
    "url": "https://github.com/danidoble/webserial/issues"
  },
  "homepage": "https://webserial-demo.danidoble.com",
  "keywords": [
    "webserial",
    "vending",
    "machine",
    "api"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/webserial.umd.cjs",
  "module": "./dist/webserial.js",
  "exports": {
    ".": {
      "import": "./dist/webserial.js",
      "require": "./dist/webserial.umd.cjs"
    }
  },
  "scripts": {
    "format": "prettier --write ./lib/**/*.js && prettier --write ./test/**/*.js",
    "dev": "vite",
    "build": "npm run format && vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "jsencrypt": "^3.3.2",
    "postcss": "^8.4.39",
    "prettier": "3.3.3",
    "uuid": "^10.0.0",
    "vite": "^5.3.4"
  }
}
